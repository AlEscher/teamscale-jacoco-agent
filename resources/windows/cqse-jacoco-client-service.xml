<service>
	<id>cqse-jacoco-client</id>
	<name>CQSE JaCoCo Client</name>
	<description>CQSE JaCoCo Client - fetches coverage from a running JaCoCo via TCP</description>

	<!-- TODO Adjust these paths to your setup. -->
	<env name="CLIENT_PATH" value="/path/to/eu.cqse.teamscale.jacoco.client-X.X.X-jacoco-Y.Y.Y.zip" />
	<env name="JAVA_HOME" value="c:\path\to\java" />

	<executable>%JAVA_HOME%\bin\java.exe -jar %CLIENT_PATH%</executable>
    <!-- TODO fill in command line arguments -->
	<env name="CLIENT_PATH" value="/path/to/eu.cqse.teamscale.jacoco.client-X.X.X-jacoco-Y.Y.Y.zip" />
	<arguments>watch</arguments>

	<logmode>rotate</logmode>

	<stoptimeout>60sec</stoptimeout>

	<!-- In case of problems try twice to restart -->
	<onfailure action="restart" delay="10 sec" />
	<onfailure action="restart" delay="20 sec" />
	<onfailure action="none" />
	<resetfailure>2 hour</resetfailure>

	<!-- Optionally, you can run the service as another user. -->
	<!--
		<serviceaccount>
			<domain>YOURDOMAIN</domain>
			<user>useraccount</user>
			<password>Pa55w0rd</password>
		</serviceaccount>
	-->
</service>
